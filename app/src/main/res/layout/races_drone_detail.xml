<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40sp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:text="id"
        android:textSize="20sp"
        android:id="@+id/racedetail_lap_id"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="5sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:text="00:00:00"
        android:layout_margin="5sp"
        android:id="@+id/racedetail_lap_time"
        app:layout_constraintBaseline_toBaselineOf="@id/racedetail_lap_id"
        app:layout_constraintStart_toEndOf="@id/racedetail_lap_id" />

<!--    TODO Make this show diffs between lap-->


</androidx.constraintlayout.widget.ConstraintLayout>